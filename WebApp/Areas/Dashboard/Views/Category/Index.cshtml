@model WebApp.Models.Category

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Category Tables</h6>
            <button class="btn btn-success" data-toggle="modal" data-target="#addModal">
                Add more
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Color code for dashboard</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Color code for dashboard</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in ViewBag.Categorys)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>
                                    <div class="text-center">
                                        <img src="@item.ImageURL" alt="@item.Name" class="w-25">
                                    </div>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.BackgroundColor</td>
                                <td class="text-center">
                                    <a class="btn btn-warning" href="/dashboard/category/edit/@item.CategoryId">Edit</a>
                                    <a class="btn btn-danger" href="/dashboard/category/delete/@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Add Modal-->
            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add more</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            @using (Html.BeginForm("Create", "Category", FormMethod.Post, new
                            {
                                enctype =
                            "multipart/form-data"
                            }))
                            {
                                <div class="col-12">
                                    <label for="name">Category name:</label>
                                    <input type="text" name="Name" id="name" required class="form-control" />
                                </div>

                                <div class="col-12 mt-3">
                                    <label for="fileUpload">Choose image:</label>
                                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*" required
                                        class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label for="name">Color code for dashboard:</label>
                                    <input type="text" name="BackgroundColor" id="name" required class="form-control" />
                                </div>

                                <div class="modal-footer mt-3">
                                    <a class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</a>
                                    <button class="btn btn-success" type="submit">Add</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->