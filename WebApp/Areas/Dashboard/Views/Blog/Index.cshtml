@model WebApp.Models.Blog

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Blog Tables</h6>
            <button class="btn btn-success" data-toggle="modal" data-target="#addModal">
                Add more
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Blog Name</th>
                            <th>Author</th>
                            <th class="hiddenTD">Tag</th>
                            <th class="hiddenTD">Description</th>
                            <th class="hiddenTD">Detail Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Blog Name</th>
                            <th>Author</th>
                            <th class="hiddenTD">Tag</th>
                            <th class="hiddenTD">Description</th>
                            <th class="hiddenTD">Detail Description</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in ViewBag.Blogs)
                        {
                            <tr>
                                <td>@item.BlogId</td>
                                <td class="w-25">
                                    <div class="text-center">
                                        <img src="@item.ImageURL" alt="@item.BlogName" class="w-50">
                                    </div>
                                </td>
                                <td>@item.BlogName</td>
                                <td>@item.Author</td>
                                <td class="hiddenTD">@item.Tag</td>
                                <td class="hiddenTD">@item.Description</td>
                                <td class="hiddenTD">@item.DetailDescription</td>
                                <td class="d-flex justify-content-between">
                                    <a class="btn btn-warning mx-1" href="/dashboard/blog/edit/@item.BlogId">Edit</a>
                                    <a class="btn btn-danger mx-1" href="/dashboard/blog/delete/@item.BlogId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Add Modal-->
            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add more</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new
                            {
                                enctype =
                            "multipart/form-data"
                            }))
                            {
                                <div class="col-12 mt-3">
                                    <label for="fileUpload">Choose image:</label>
                                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*" required
                                        class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label for="name">Blog name:</label>
                                    <input type="text" name="BlogName" id="name" required class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label for="name">Author:</label>
                                    <input type="text" name="Author" id="name" required class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label for="name">Tag:</label>
                                    <input type="text" name="Tag" id="name" required class="form-control" />
                                </div>

                                <div class="col-12 mt-3">
                                    <label for="description">Description:</label>
                                    <input type="text" name="Description" id="description" required class="form-control" />
                                </div>

                                <div class="col-12 mt-3">
                                    <label for="description">Detail Description:</label>
                                    <input type="text" name="DetailDescription" id="description" required class="form-control" />
                                </div>

                                <div class="modal-footer mt-3">
                                    <a class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</a>
                                    <button class="btn btn-success" type="submit">Add</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->